node{
   stage('SCM Checkout'){
     git 'https://github.com/phemmmie/new-app'
   }
   stage('Compile-Package'){
      // Get maven home path
      def mvnHome =  tool name: 'maven-3', type: 'maven'   
      sh "${mvnHome}/bin/mvn package"
   }
   stage('Deploy to Tomcat'){
      
      sshagent(['Tomcat Stack']) {
    sh 'scp -o StrictHostKeyChecking=no target/*.war shard@192.168.223.133:/usr/local/tomcat/webapps'
}
   }